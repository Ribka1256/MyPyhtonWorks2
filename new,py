import random
def spin_row():
    symblos = ['üçí', 'üçâ', 'üçã', 'üîî', '‚≠ê']
    return [random.choice(symblos)for _ in range(3)]

def print_row(row):
    print('***************')
    print(' | '.join(row))
    print('***************')
def get_pay(row, bet):
    if row[0] == row[1] ==row[2]:
        if row[0] == 'üçí':
            return bet * 3
        elif row[0] == 'üçâ':
            return bet * 6
        elif row[0] == 'üçã':
            return bet * 9
        elif row[0] == 'üîî':
            return bet * 12
        elif row[0] == '‚≠ê':
            return bet * 15
    return 0
        
while True:       
    choice = input('Do you want play hte game: ')
    if choice == 'y':
        def main():
            balance = 100
            print('*******************')
            print('Wellcome to the game')
            print('*******************')
            print('Symblos:üçí üçâ üçã üîî ‚≠ê ')

            while True:
                    
                    print(f'The current balance you heve is: {balance}')
                    bet = input('Enter the amount you would like to bet on(or q to quit): ')
                    if bet == 'q':
                        break
                    if bet.isdigit():
                        bet = int(bet)
                        
                        if bet <= 0:
                            print('Please enter number grater than zero')
                            continue
                        elif bet > balance:
                            print('Bet can not be grater than your balence')
                            continue
                    else:
                        print('Enter a valid number')
                        continue
                    balance -= bet
                    row = spin_row()
                    print('Spinning....\n')
                    print_row(row)
                    
                    payment = get_pay(row, bet)
                    if payment > 0:
                        print(f'You have won: {payment}')
                    else:
                        print(f'Sorry! you did not won on this round')
                    if balance <= 0:
                        print("You're out of money üí∏. Game over!")
                        break

                    balance += payment 
                
        if __name__ == '__main__':
            main()
    elif choice == 'n':
        print('Exiting')
        break
    else:
        print('Please insert valid input')
        
        
